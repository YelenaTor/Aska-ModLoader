<Controls:MetroWindow x:Class="ModManager.DesktopUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Aska Mod Manager" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Height="40" 
                Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                BorderThickness="0,0,0,1">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Aska Mod Manager" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="BepInEx: " Foreground="Gray" />
                    <TextBlock Text="{Binding RuntimeStatus}" FontWeight="SemiBold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="IndianRed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRuntimeReady}" Value="True">
                                        <Setter Property="Foreground" Value="LightGreen" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding BepInExVersion, StringFormat=' (v{0})'}" 
                               Foreground="Gray" 
                               Visibility="{Binding IsRuntimeReady, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock Foreground="Gray"
                               Visibility="{Binding IsRuntimeReady, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value=" | HarmonyX: ❌" />
                                <Setter Property="Foreground" Value="IndianRed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsHarmonyInstalled}" Value="True">
                                        <Setter Property="Text" Value="{Binding HarmonyVersion, StringFormat=' | HarmonyX: v{0}'}" />
                                        <Setter Property="Foreground" Value="Gray" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="2"
                        Content="Configure Game Path"
                        Padding="8,4"
                        Margin="10,0,0,0"
                        Command="{Binding ConfigureGamePathCommand}"
                        Visibility="{Binding IsGamePathConfigured, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=False}" />

                <Button Grid.Column="3"
                        Content="Install BepInEx"
                        Padding="8,4"
                        Margin="10,0,0,0"
                        Command="{Binding InstallBepInExCommand}"
                        Visibility="{Binding CanInstallBepInEx, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button Grid.Column="4"
                        Content="Check for Updates"
                        Padding="8,4"
                        Margin="10,0,0,0"
                        Command="{Binding CheckForUpdatesCommand}" />

                <StackPanel Grid.Column="5" Orientation="Horizontal" Margin="20,0,0,0">
                    <CheckBox Content="Close on Launch" 
                              IsChecked="{Binding CloseOnLaunch}" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"/>
                    <Button Content="PLAY" 
                            Command="{Binding LaunchGameCommand}"
                            Padding="20,5" 
                            FontWeight="Bold"
                            Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Warning Banner -->
        <Border Grid.Row="1" 
                Background="DarkGoldenrod" 
                Visibility="{Binding IsGameRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="10"
                VerticalAlignment="Top"
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="⚠" FontSize="16" Foreground="White" Margin="0,0,10,0" />
                <TextBlock Text="ASKA is currently running. Mod operations are disabled to prevent file corruption." 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
                
                <Button Content="Kill Game Process"
                        Style="{StaticResource MahApps.Styles.Button.Flat}"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        Padding="10,2"
                        Margin="20,0,0,0"
                        Command="{Binding KillGameCommand}" />
            </StackPanel>
        </Border>

        <!-- App Update Banner -->
        <Border Grid.Row="1" 
                Background="SteelBlue" 
                Visibility="{Binding IsAppUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="9"
                VerticalAlignment="Top"
                Margin="0,0,0,0"
                Padding="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="⬆" FontSize="14" Foreground="White" Margin="0,0,8,0" />
                <TextBlock Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center">
                    <Run Text="Mod Manager update available: v" /><Run Text="{Binding AppUpdateVersion}" />
                </TextBlock>
                <Button Content="Update Now"
                        Style="{StaticResource MahApps.Styles.Button.Flat}"
                        Foreground="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        Padding="10,2"
                        Margin="20,0,0,0"
                        Command="{Binding UpdateAppCommand}" />
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="5">
            <TabItem Header="Mods">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Installed Mods -->
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Installed Mods" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" />
                            <Button Content="Refresh" 
                                    Padding="8,4"
                                    Margin="10,0,0,0"
                                    Command="{Binding RefreshCommand}" />
                            <Button Content="Install from ZIP" 
                                    Padding="8,4"
                                    Margin="5,0,0,0"
                                    Command="{Binding InstallFromZipCommand}" />
                        </StackPanel>

                        <DataGrid x:Name="InstalledModsGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  ItemsSource="{Binding InstalledMods}"
                                  SelectedItem="{Binding SelectedMod, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="Enabled" 
                                                        Binding="{Binding IsEnabled, Mode=TwoWay}" />
                                <DataGridTemplateColumn Header="Status" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock HorizontalAlignment="Center" FontSize="14" ToolTip="{Binding TooltipText}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="✔" />
                                                        <Setter Property="Foreground" Value="LightGreen" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasErrors}" Value="True">
                                                                <Setter Property="Text" Value="❌" />
                                                                <Setter Property="Foreground" Value="IndianRed" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding HasWarnings}" Value="True">
                                                                <Setter Property="Text" Value="⚠" />
                                                                <Setter Property="Foreground" Value="Orange" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsUpdateAvailable}" Value="True">
                                                                <Setter Property="Text" Value="⬆" />
                                                                <Setter Property="Foreground" Value="SkyBlue" />
                                                                <Setter Property="ToolTip" Value="{Binding TooltipText}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Name" 
                                                    Binding="{Binding Name}" 
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Version" 
                                                    Binding="{Binding Version}" 
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Author" 
                                                    Binding="{Binding Author}" 
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Description" 
                                                    Binding="{Binding Description}" 
                                                    Width="*"
                                                    IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <!-- Right Panel - Mod Details -->
                    <Grid Grid.Column="1" Margin="10,0,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Mod Actions -->
                        <StackPanel Orientation="Horizontal" 
                                    Grid.Row="0"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding SelectedMod, Converter={StaticResource NullToVisibilityConverter}}">
                            <Button Content="Enable" 
                                    Padding="8,4"
                                    Margin="0,0,5,0"
                                    Command="{Binding EnableModCommand}" />
                            <Button Content="Disable" 
                                    Padding="8,4"
                                    Margin="0,0,5,0"
                                    Command="{Binding DisableModCommand}" />
                            <Button Content="Update" 
                                    Padding="8,4"
                                    Margin="0,0,5,0"
                                    Background="SkyBlue"
                                    Foreground="Black"
                                    Command="{Binding UpdateSelectedModCommand}"
                                    Visibility="{Binding SelectedMod.IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <Button Content="Uninstall" 
                                    Padding="8,4"
                                    Background="IndianRed"
                                    Command="{Binding UninstallModCommand}" />
                        </StackPanel>

                        <!-- Mod Info -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      Visibility="{Binding SelectedMod, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="{Binding SelectedMod.Name}" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" />
                                <TextBlock Text="{Binding SelectedMod.Version}" 
                                           FontSize="14" 
                                           Foreground="Gray" />
                                <TextBlock Text="{Binding SelectedMod.Author, StringFormat='by {0}'}" 
                                           FontSize="12" 
                                           Foreground="Gray" />
                                
                                <Separator Margin="0,10" />
                                
                                <TextBlock Text="Description" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,5" />
                                <TextBlock Text="{Binding SelectedMod.Description}" 
                                           TextWrapping="Wrap" />
                                
                                <Separator Margin="0,10" />
                                
                                <TextBlock Text="Dependencies" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,5" />
                                <ItemsControl ItemsSource="{Binding SelectedMod.Dependencies}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding Id}" 
                                                           FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding MinVersion}" 
                                                           FontSize="12" 
                                                           Foreground="Gray" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <Separator Margin="0,10" />
                                
                                <TextBlock Text="Installation Info" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,5" />
                                <TextBlock Text="{Binding SelectedMod.InstallPath, StringFormat='Path: {0}'}" 
                                           FontSize="12" 
                                           Foreground="Gray" />
                                <TextBlock Text="{Binding SelectedMod.InstallDate, StringFormat='Installed: {0}'}" 
                                           FontSize="12" 
                                           Foreground="Gray" />
                                <TextBlock Text="{Binding SelectedMod.LastUpdated, StringFormat='Updated: {0}'}" 
                                           FontSize="12" 
                                           Foreground="Gray" />
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Discovery">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Available Mods" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0"/>
                        
                        <TextBox Width="200"
                                 Controls:TextBoxHelper.Watermark="Search..."
                                 Controls:TextBoxHelper.ClearTextButton="True"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,10,0"
                                 VerticalAlignment="Center" />
                        
                        <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,5,0" />
                        <ComboBox ItemsSource="{Binding SortOptions}"
                                  SelectedItem="{Binding SelectedSortOption}"
                                  Width="120"
                                  VerticalAlignment="Center" />

                        <Button Content="Refresh" 
                                Padding="8,4"
                                Margin="10,0,0,0"
                                Command="{Binding FetchAvailableModsCommand}" />
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding DiscoveredMods}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                            <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="80" />
                            <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="120" />
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                            <DataGridTemplateColumn Header="Action" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Install" 
                                                Padding="8,2"
                                                Command="{Binding DataContext.InstallRemoteModCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Diagnostics">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Runtime Errors" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" />
                        <Button Content="Copy Diagnostic Bundle" 
                                Padding="8,4"
                                Margin="10,0,0,0"
                                Command="{Binding CopyDiagnosticsCommand}" />
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding RuntimeErrors}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" Width="100" />
                            <DataGridTextColumn Header="Mod" Binding="{Binding ModName}" Width="150" />
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" 
                   Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Controls:ProgressRing IsActive="{Binding IsBusy}" 
                                      Width="60" 
                                      Height="60" 
                                      Foreground="White" />
                <TextBlock Text="{Binding BusyMessage}" 
                           Foreground="White" 
                           FontSize="18" 
                           Margin="0,20,0,0" 
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</Controls:MetroWindow>
